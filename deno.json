{
	"tasks": {
		"dev": "deno run --watch --allow-read --allow-env main.ts",
		"format": "deno fmt"
	},
	"imports": {
		"@logtape/logtape": "jsr:@logtape/logtape@^0.9.0",
		"@std/assert": "jsr:@std/assert@1"
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "always"
		}
	}
}
