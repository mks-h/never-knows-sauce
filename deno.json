{
	"tasks": {
		"run": "deno run --allow-read --allow-env --allow-sys --allow-net main.ts",
		"dev": "deno run --allow-read --allow-env --allow-sys --allow-net --watch main.ts",
		"check": "deno check --all main.ts",
		"format": "deno fmt"
	},
	"compilerOptions": {
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true
	},
	"fmt": {
		"useTabs": true,
		"semiColons": true,
		"singleQuote": false,
		"lineWidth": 80,
		"proseWrap": "preserve",
		"exclude": ["./README.md"]
	},
	"imports": {
		"@logtape/logtape": "jsr:@logtape/logtape@^0.9.0",
		"@std/assert": "jsr:@std/assert@1"
	}
}
